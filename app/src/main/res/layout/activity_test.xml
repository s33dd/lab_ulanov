<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertSort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3352b8"
    tools:context=".Test">

    <LinearLayout
        android:id="@+id/counters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/originalArray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="" />

        <TextView
            android:id="@+id/bubbleSort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="" />

        <TextView
            android:id="@+id/insertSortTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:text="" />

        <TextView
            android:id="@+id/pyramidSort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/mergeSort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginTop="20dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/testNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/counters"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/mainPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#e6871c"
            android:layout_marginRight="90dp"
            android:text="Назад" />

        <Button
            android:id="@+id/startTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#e6871c"
            android:text="Тест" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>